<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PlayActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="411dp"
        android:layout_height="451dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        android:background="#F9F9F9"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="0"
            app:layout_row="0"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="1"
            app:layout_row="0"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="2"
            app:layout_row="0"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="0"
            app:layout_row="1"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="1"
            app:layout_row="1"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="2"
            app:layout_row="1"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="0"
            app:layout_row="2"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="1"
            app:layout_row="2"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="135dp"
            android:layout_height="150dp"
            android:onClick="Kenny"
            app:layout_column="2"
            app:layout_row="2"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/baslangic"
            android:layout_width="137dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#000000"
            android:textSize="75sp"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="183dp"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/hightScore"
            android:layout_width="252dp"
            android:layout_height="38dp"
            android:layout_marginBottom="32dp"
            android:gravity="clip_vertical"
            android:text="En YÃ¼ksek Skor:"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/score"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginEnd="44dp"
            android:gravity="center"
            android:shadowColor="#F4EFEF"
            android:text="Skor:"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/like3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/like2" />

        <ImageView
            android:id="@+id/like1"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/like" />

        <ImageView
            android:id="@+id/like2"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/like" />

        <ImageView
            android:id="@+id/like3"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/like1"
            app:layout_constraintStart_toEndOf="@+id/like1"
            app:srcCompat="@drawable/like" />

        <TextView
            android:id="@+id/seviyeText"
            android:layout_width="79dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="Seviye"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/hightScore"
            app:layout_constraintEnd_toStartOf="@+id/score"
            app:layout_constraintStart_toEndOf="@+id/like3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>